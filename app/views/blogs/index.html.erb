<h1>Blogs</h1>
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-sm-12 mt-20">
        <div class="card mb-12" style="max-width: 80rem;">
          <div class="card-header text-white bg-secondary"><%= blog.title %></div>
          <div class="card-body">
            <h4 class="card-title"><%= truncate(blog.description, length: 50) %></h4>
            <p class="card-text">Tags: <%= raw blog.tags.map(&:name).map { |t| 
              link_to t, tag_path(t) }.join(", ") %></p>
            <p class= "pull-right"><%= link_to "Read more ....", blog_path(blog) %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
    <ul class="pagination">
      <%= will_paginate @blogs %>
    </ul>
