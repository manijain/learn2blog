<%= tinymce_assets %>
<%= form_with(model: blog, local: true) do |form| %>
  <fieldset>
    <legend>Instruction : -</legend><hr/>
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-group row">
    <label for="staticTitle" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control", id: "staticTitle" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="staticDesc" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <%= form.text_area :description, class: "form-control tinymce", id: "staticDesc", rows: 20 %>
    </div>
  </div>

  <div class="form-group row">
    <label for="staticTag" class="col-sm-2 col-form-label">Tag</label>
    <div class="col-sm-10">
      <%= form.text_field :tag_list, class: "form-control", id: "staticTag" %>
    </div>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary" %>
</fieldset>
<% end %>
<%= tinymce %>
